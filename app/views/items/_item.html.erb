<%= content_tag :div, id: "item-#{item.id}" do %>
  <div class='row bordered'>
    <div class='col-md-8'>
      <%= item.body %>
    </div>
    <div class='col-md-2'><%= item.days_left %></div>
    <div class='col-md-2'><%= link_to  "Complete", [item.list, item], method: :delete, remote: true, data: { confirm: 'Are you sure you want to delete this item?'}, class: 'btn btn-primary' %></div>
  </div>
<% end %>